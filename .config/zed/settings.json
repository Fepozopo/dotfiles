// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "format_on_save": "on",
  "colorize_brackets": true,
  "git_panel": {
    "tree_view": true,
  },
  "sticky_scroll": {
    "enabled": true,
  },
  "title_bar": {
    "show_branch_icon": true,
  },
  "which_key": {
    "enabled": true,
  },
  "tabs": {
    "file_icons": true,
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "agent_servers": {
    "opencode": {
      "default_model": "github-copilot/gpt-5-mini",
      "type": "registry",
    },
    "github-copilot": {
      "default_model": "gpt-5-mini",
      "type": "registry",
    },
  },
  "agent": {
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o",
    },
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "provider": "copilot",
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
    },
    "enabled_in_text_threads": false,
  },
  "base_keymap": "VSCode",
  "icon_theme": "Catppuccin Mocha",
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha",
  },
  "auto_install_extensions": {
    "html": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "codebook": true,
    "dockerfile": true,
    "lua": true,
    "sql": true,
    "zig": true,
    "vue": true,
    "make": true,
    "git-firefly": true,
    "rainbow-csv": true,
    "comment": true,
    "toml": true,
  },
  "languages": {
    "Python": {
      "language_servers": [
        "ty",
        "ruff",
        "!basedpyright",
        "!pyrefly",
        "!pyright",
        "!pylsp",
      ],
    },
  },
}
